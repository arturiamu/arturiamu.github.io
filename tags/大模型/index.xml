	width=&#34;174&#34;
	height=&#34;141&#34;
	srcset=&#34;http://localhost:1313/post/local-deepseek-model/img_3_hu_d9dc930af848a450.png 480w, http://localhost:1313/post/local-deepseek-model/img_3_hu_5c21a2759adf5c48.png 1024w&#34;
	loading=&#34;lazy&#34;
	
